{% extends 'base.html.twig' %}

{% block title %}Bomoko | Register{% endblock %}

{% block body %}
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="blood/images/img-01.png" alt="IMG">
                </div>

                <form class="login100-form validate-form" method="post">
                    {% for flash_error in app.flashes('verify_email_error') %}
                        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                    {% endfor %}

                    <span class="login100-form-title">
                        Bomoko Register
                    </span>

                    {{ form_start(registrationForm) }}

                    <div class="wrap-input100 validate-input" data-validate="Full name is required">
                        {{ form_widget(registrationForm.username, {'attr': {'class': 'input100', 'placeholder': 'Nom Complet'}}) }}
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'input100', 'placeholder': 'E-mail'}}) }}
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'input100', 'placeholder': 'Mot de passe'}}) }}
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="You must agree to the terms">
                        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'input-checkbox'}}) }}
                        <label class="checkbox-label" for="{{ registrationForm.agreeTerms.vars.id }}">
                            Conditions d'utilisation
                        </label>
                    </div>

                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn" type="submit">
                            S'inscrire
                        </button>
                    </div>

                    <div class="text-center p-t-136">
                        <a class="txt2" href="/">
                            Already have an account? Login here
                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                        </a>
                    </div>

                    {{ form_end(registrationForm) }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}