{% extends 'base.html.twig' %}

{% block title %}Bomoko | Register{% endblock %}

{% block body %}
    <!-- ===============================================-->
    <!--    Main Content-->
    <!-- ===============================================-->
    <main class="main" id="top">
        <div class="container-fluid">
            <div class="row min-vh-100 flex-center g-0">
                <div class="col-lg-8 col-xxl-5 py-3 position-relative"><img class="bg-auth-circle-shape" src="appUi/img/icons/spot-illustrations/bg-shape.png" alt="" width="250"><img class="bg-auth-circle-shape-2" src="../../../assets/img/icons/spot-illustrations/shape-1.png" alt="" width="150">
                    <div class="card overflow-hidden z-1">
                        <div class="card-body p-0">
                            <div class="row g-0 h-100">
                                <div class="col-md-5 text-center bg-card" style="background-color: green">
                                    <div class="position-relative p-4 pt-md-5 pb-md-7" data-bs-theme="light">
                                        <div class="bg-holder bg-auth-card-shape" style="background-image:url(appUi/img/icons/spot-illustrations/half-circle.png);">
                                        </div>
                                        <!--/.bg-holder-->

                                        <div class="z-1 position-relative"><a class="link-light mb-4 font-sans-serif fs-5 d-inline-block fw-bolder" href="../../../index.html">Bomoko</a>
                                            <p class="opacity-75 text-white">Transformez la surveillance en une expérience fluide et sécurisée, pour protéger ce qui compte vraiment et renforcer la confiance au quotidien.</p>
                                        </div>
                                    </div>
                                    <div class="mt-3 mb-4 mt-md-4 mb-md-5" data-bs-theme="light">
                                        <p class="pt-3 text-white">Vous avez un compte ?<br><a class="btn btn-outline-light mt-2 px-4" href="/login">Se connecter</a></p>
                                    </div>
                                </div>
                                <div class="col-md-7 d-flex flex-center">
                                    <div class="p-4 p-md-5 flex-grow-1">
                                        <h3>Inscription</h3>
                                        <form method="post">
                                            {% for flash_error in app.flashes('verify_email_error') %}
                                                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                                            {% endfor %}
                                            {{ form_start(registrationForm) }}
                                            <div class="mb-3">
                                                <label class="form-label" for="card-name">Nom complet</label>
                                                {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control', 'autocomplete':"on"}}) }}
                                            </div>
                                            <div class="mb-3">
                                                <label class="form-label" for="card-email">Email address</label>
                                                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                                            </div>

                                                <div class="mb-3">
                                                    <label class="form-label" for="card-password">Mot de passe</label>
                                                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                                                </div>

                                            <div class="form-check">
                                                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                                                <label class="form-label" for="{{ registrationForm.agreeTerms.vars.id }}">J'accepete les <a href="#" style="color: green">termes </a>et <a class="white-space-nowrap" href="#" style="color: green">conditions d'utilisation</a></label>
                                            </div>
                                            <div class="mb-3">
                                                <button class="btn btn d-block w-100 mt-3" style="background-color: green; color: white" type="submit" name="submit">S'inscrire</button>
                                            </div>
                                            {{ form_end(registrationForm) }}
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <!-- ===============================================-->
    <!--    End of Main Content-->
    <!-- ===============================================-->
{% endblock %}